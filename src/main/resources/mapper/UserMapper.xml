<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.agent.mapper.UserMapper">

    <select id="getInfo" parameterType="String" resultType="com.agent.bean.UserBean">
        SELECT nick_name FROM sys_user WHERE name = #{name} AND password = #{password}
    </select>

</mapper>